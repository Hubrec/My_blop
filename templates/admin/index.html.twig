{% extends 'base.html.twig' %}

{% block title %}Admin index{% endblock %}

{# block admin with all the posts, categories and users #}
{% block body %}

    <div class="d-flex flex-sm-column flex-md-column flex-lg-row flex-xl-row flex-column justify-content-center" style="margin-bottom: 80px">
        
        <div class="d-flex col-lg-4 col-xl-4 col-sm-12 col-md-12 flex-column">
            <h2 style="padding: 15px"> Posts </h2>
            {% for post in posts %}
                <a href="/post/{{ post.getId() }}" style="text-decoration: none; color: black; padding: 5px">
                    <div class="card hover">
                        <div class="card-body" style="padding: 10px 15px 5px 15px;">
                            <p class="card-title text-center" style="font-size:1(px;"> {{ post.getTitle() }}</p>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>

        <div class="d-flex col-lg-4 col-xl-4 col-sm-12 col-md-12 flex-column">
            <h2 style="padding: 15px"> Categories </h2>
            {% for category in categories %}
                <a href="/category/{{ category.getId() }}" style="text-decoration: none; color: black; padding: 5px">
                    <div class="card hover">
                        <div class="card-body" style="padding: 10px 15px 5px 15px;">
                            <p class="card-title text-center" style="font-size:1(px;"> {{ category.getName() }}</p>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>

        <div class="d-flex col-lg-4 col-xl-4 col-sm-12 col-md-12 flex-column">
            <h2 style="padding: 15px"> Users </h2>
            {% for user in users %}
                <div style="padding:5px">
                    <div class="card hover">
                        <div class="card-body d-flex align-items-center" style="padding: 10px 15px 5px 15px;">
                            <p class="card-title text-center col-11" style="font-size:1(px;"> {{ user.getEmail() }}</p>
                            {% if user.getRoles()[0] != 'ROLE_ADMIN' %}
                                <a href="/user/{{ user.getId() }}/delete" class="btn btn-outline-danger" style="font-size: 10px; padding: 5px; height: 26px; position: relative; bottom: 4px; right: 8px">Delete</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>

{% endblock %}