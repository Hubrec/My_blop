{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    
    <div class="d-flex justify-content-center" style="padding-top: 50px;">
    <div class="card hover" style="max-width: 70%;">
    <div class="card-body" style="min-width: 600px">

    <form action="{{ path('app_login') }}" method="post">

        <h1 style="margin-bottom:20px;">Sign in</h1>

        <p style="margin-bottom:20px;">Don't have an account ?  <a href="/register"> register </a></p>

        <!-- Email input -->
        <div class="form-outline mb-4">
            <label for="username">Email address</label>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}">
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
            <label for="password">Password</label>
            <input class="form-control" type="password" id="password" name="_password">
        </div>

        <!-- 2 column grid layout for inline styling -->
        <div class="row mb-4">
            <div class="col d-flex justify-content-center">
            <!-- Checkbox -->
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                <label class="form-check-label" for="form2Example31"> Remember me </label>
            </div>
            </div>

            <div class="col">
            <!-- Simple link -->
            <a href="#!">Forgot password?</a>
            </div>
        </div>

        <input type="hidden" name="_target_path" value="/">

        <!-- Submit button -->
        <button type="submit" class="btn btn-outline-success btn-block mb-4">Sign in</button>

    </form>
    </div>
    </div>
    </div>
{% endblock %}