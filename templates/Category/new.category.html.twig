{% extends 'base.html.twig' %}

{% block title %}New category{% endblock %}

{# block with the new category form #}
{% block body %}
    <div class="d-flex flex-column align-items-center" style="padding-top:70px; width: 100%">
        <div class="card hover col-11 col-md-9 col-lg-8 col-xl-6">
            <div class="card-body">
            {{ form_start(newCategoryForm) }}

                <h1 style="margin-bottom:20px; font-size: 24px">Add new category</h1>

                <div class="form-outline ">
                    {{ form_row(newCategoryForm.name) }}
                </div>

                <button type="submit" class="btn btn-outline-success btn-block ">Add</button>

            {{ form_end(newCategoryForm) }}
            </div>
        </div>
    </div>

{% endblock %}